# =====================================
# NEXURA-AI Environment Configuration
# =====================================
# Copy this file to .env and fill in your values
# Never commit .env file to Git!

# MongoDB Configuration
MONGODB_URL=mongodb://your_username:your_password@localhost:27017/nexura_db?authSource=admin
DATABASE_NAME=nexura_db

# MongoDB Credentials (for docker-compose)
MONGO_USER=your_mongodb_username
MONGO_PASSWORD=your_mongodb_password

# JWT Configuration
# Generate a strong random secret key:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-jwt-key-min-64-characters-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# App Configuration
APP_NAME=NEXURA-AI
APP_VERSION=1.0.0
DEBUG=False
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006

# Production Settings Example
# DEBUG=False
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
